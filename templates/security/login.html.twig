{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<section >
<style>
    .rounded-t-5 {
      border-top-left-radius: 0.5rem;
      border-top-right-radius: 0.5rem;
    }

    @media (min-width: 800px) {
      .rounded-tr-lg-0 {
        border-top-right-radius: 0;
      }

      .rounded-bl-lg-5 {
        border-bottom-left-radius: 0.5rem;
      }
    }
  </style>
<div class="card mb-3">
<div class="row g-0 d-flex align-items-center">
 <div class="col-lg-4 d-none d-lg-flex">
        <img src={{ asset('media/analyse_app.jpg') }} alt="Analysis"
          class="w-100 rounded-t-5 rounded-tr-lg-0 rounded-bl-lg-5" />
      </div>
       <div class="col-lg-8">
        <div class="card-body py-5 px-md-5">
    <h1> <i>Me connecter</i> </h1>
    <div class="row">
        <div class="col">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté(e) comme {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Me déconnecter</a>
                    </div>
                {% endif %}

               
                <label for="inputEmail">Entre votre mail</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
             
            <div class="row mb-4">
              <div class="col d-flex justify-content-center">
                <!-- Checkbox -->
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                  <label class="form-check-label" for="form2Example31"> Remember me </label>
                </div>
              </div>

              <div class="col">
                <!-- Simple link -->
                                <a href="{{ path('forgotten_password') }}">Mot de passe oublié?</a>
              </div>
            </div>
<button type="submit" class="btn btn-primary btn-block mb-4 ">Me connecter</button>
       <a href="{{ path('app_register') }}" class="btn btn-primary btn-block mb-4 ">M'inscrire</a>

            </form>

        </div>
    </div>
</section>

{% endblock %}