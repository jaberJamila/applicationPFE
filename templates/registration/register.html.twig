{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<section >

 <style>
    .rounded-t-5 {
      border-top-left-radius: 0.5rem;
      border-top-right-radius: 0.5rem;
    }

    @media (min-width: 800px) {
      .rounded-tr-lg-0 {
        border-top-right-radius: 0;
      }

      .rounded-bl-lg-5 {
        border-bottom-left-radius: 0.5rem;
      }
    }
  </style>
<div class="card mb-3">
<div class="row g-0 d-flex align-items-center">
 <div class="col-lg-4 d-none d-lg-flex">
        <img src={{ asset('media/analyse_app.jpg') }} alt="Analysis"
          class="w-100 rounded-t-5 rounded-tr-lg-0 rounded-bl-lg-5" />
      </div>
        <div class="col-lg-8">
        <div class="card-body py-5 px-md-5">
    <h1> <i>Inscription</i> </h1>

    {{ form_start(registrationForm) }}
    <fieldset class="mb-3">
    
   
        {{ form_row(registrationForm.nom) }}
         {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.email) }}
        </fieldset>
        <fieldset class="mb-3">
     
        {{ form_row(registrationForm.entreprise) }}
        {{ form_row(registrationForm.qualite) }}
        {{ form_row(registrationForm.poste) }}
        {{ form_row(registrationForm.ntelephone) }}
        {{ form_row(registrationForm.identifierIRA) }}
        </fieldset>
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}
        
        

        <button type="submit" class="btn btn-primary btn-block mb-4 ">M'inscrire</button>
        <a href="{{ path('app_login') }}" class="btn btn-primary btn-block mb-4"> Me connecter</a>
    {{ form_end(registrationForm) }}
    </div>
</div>
</section>
{% endblock %}
